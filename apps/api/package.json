  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "mkdir -p reports/junit reports/coverage && JEST_JUNIT_OUTPUT=reports/junit/jest-junit.xml jest --coverage --coverageReporters=text --coverageReporters=lcov --coverageReporters=html --coverageDirectory=reports/coverage --reporters=default --reporters=jest-junit",
    "test:cron": "jest __tests__/cron.fuzz.test.ts --runInBand --coverage=false --testTimeout=120000"
  },
  "dependencies": {
    "@prisma/client": "^7.0.0",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "cron-parser": "^5.3.0",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "prisma": "^6.15.0",
    "streamroller": "^3.1.5",
    "undici": "^7.16.0",
    "undici-proxy": "^0.3.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "fast-check": "^4.2.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.16.2",
    "typescript": "^5.9.2"
  }
